<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ebebeb"
    android:orientation="vertical">

    <com.example.rollcall.Topbar
        android:id="@+id/topbar_applyForMeeting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000"
        app:leftBackground="@drawable/leftselecter"
        app:titleText="申请会议"
        app:titleTextColor="#FFF"
        app:titleTextSize="10sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="53dp"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:text="尊敬的客户，您好：                                                                       请您将参加会议人员的照片（正脸），以及姓名和联系方式发送到我们的官方邮箱，待工作人员确认后，会将会议名及会议ID发送给您。您将会议名输入下方的输入框，点击下载名单，最后进入人脸签到，输入会议ID即可进行相关的功能。                                              官方邮箱：369458889@qq.com" />
    <LinearLayout style="@style/Register_Input"
        android:layout_marginTop="81dp"
        android:id="@+id/linearLayout_meeting"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/textView4"
            style="@style/Black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="会议ID:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_meeting"
            style="@style/Register_Edit"
            android:hint="请输入您的会议ID号"
            android:textColorHint="@color/gray"
            android:textColor="@color/gray" />

    </LinearLayout>

    <Button
        android:id="@+id/button_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout_meeting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:text="下载名单" />


</RelativeLayout>
